{
    "type": "VStack",
    "props": {
        "w": "full",
        "h": "full",
        "padding": 10,
        "alignItems": "flex-start",
        "spacing": "10px",
        "borderWidth": "1px",
        "borderColor": "gray.300",
        "borderRadius": "md",
        "id": "vstackMain" 
    },
    "children": [
        {
            "type": "Heading",
            "props": {
                "as": "h4",
                "size": "md",
                "children": "Mixture Preparation Process",
                "id": "heading1" // Added id to Heading
            }
        },
        {
            "type": "Accordion",
            "props": {
                "w": "100%",
                "allowMultiple": true,
				"id": "mixturePreparationAccordion"
            },
            "children": [
                {
                    "type": "AccordionItem",
                    "children": [
                        {
                            "type": "AccordionButton",
                            "props": {
                                "id": "btn1additive",
                                "children": "Additive"
                            }
                        },
                        {
                            "type": "AccordionPanel",
                            "props": {
                                "pb": 4,
                                "id": "panel1additive"
                            },
                            "children": {
                                "type": "NumberInput",
                                "props": {
                                    "label": "Additive: ",
                                    "idIncrement": "btn3increaseadditive",
                                    "idDecrease": "btn3decreaseadditive",
                                    "defaultValue": 3
                                }
                            }
                        }

                    ]
                },
                {
                    "type": "AccordionItem",
                    "children": [
                        {
                            "type": "AccordionButton",
                            "props": {
                                "id": "btn1container",
                                "children": "Container"
                            }
                        },
                        {
                            "type": "AccordionPanel",
                            "props": {
                                "pb": 4,
                                "id": "panel1container"
                            },
                            "children": {
                                "type": "YesNo",
                                "props": {
                                    "label": "Container? ",
                                    "id": "btn2container",
                                    "defaultValue": true
                                }
                            }
                        }

                    ]
                },
                {
                    "type": "AccordionItem",
                    "children": [
                        {
                            "type": "AccordionButton",
                            "props": {
                                "id": "btn1drink",
                                "children": "Mixture"
                            }
                        },
                        {
                            "type": "AccordionPanel",
                            "props": {
                                "pb": 4,
                                "id": "panel1Mixture"
                            },
                            "children": {
                                "type": "SimpleGrid",
                                "props": {
                                    "w": "full",
									"id": "gridMixture",
                                    "spacing": 4,
                                    "templateColumns": "repeat(auto-fill, minmax(200px, 1fr))",
                                    "alignItems": "center"
                                },
                                "children": []
                            }
                        }

                    ]
                }
            ]
        },
        {
            "type": "Button",
            "props": {
                "id": "btn1ok",
                "colorScheme": "blue",
                "alignSelf": "center",
                "children": "OK"
            },
            "children": []
        }
    ]
}
